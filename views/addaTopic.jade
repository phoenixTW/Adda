extends layout
block vars
 - var title = "Topics"
block headcontent
block content
 a(href="/dashboard") Dashboard
 hr
 center
  h1 Select your topics here
  div
   form(action="/addaTopic", method="POST")
    span
     input(type="text" name="searchText" placeholder="Enter topic name")
     input(type="submit" value="Search")
   if !name
     h2(style="color:red") #{error}
   if name
    table(style="width:20%,float:left")
     tr
      td
       div
        ol
         each topic in name
          li
            a(href="#{topic.name}") #{topic.name}