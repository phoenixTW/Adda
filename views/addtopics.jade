extends layout
block vars
 - var title = "Topics"

block content
  center
   h1 Start New Topics
   if error
    p ERROR: #{error}
   form(action="/addTopics" method="POST")
    span 
     |Topic Name:
     input(type="text" name="name" required)
    br
    span 
     |Discription:
     input(type="text" name="description" required)
    br
    span
     input(type="submit" value="Submit")
   h1 Select your topics here
   hr
   div
    form(action="/addTopics", method="POST")
     span
      input(type="text" name="searchText" placeholder="Enter topic name")
      input(type="submit" value="Search")
    if !name
      h2(style="color:red") #{error}
    if name
     table(style="width:20%,float:left")
      tr
       td
        div
         ol
          each topic in name
           li
             a(href="#{topic.name}") #{topic.name}